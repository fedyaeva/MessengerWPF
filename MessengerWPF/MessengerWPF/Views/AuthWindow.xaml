<Window x:Class="MessengerWPF.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MessengerWPF"
        mc:Ignorable="d"
        Title="AuthWindow" Height="600" Width="800" Background="#FAEBD7">
    <Grid>
        <StackPanel VerticalAlignment="Top" Margin="0,0,0,0" Height="874" Width="402">
            
            <!-- Заголовок Авторизация -->
            <TextBlock 
                Text="Авторизация" FontSize="32" 
                HorizontalAlignment="Center" 
                Margin="0,20,0,0"/>
            
            <!-- Заголовок поля Email-->
            <TextBlock
                Text="Email:" 
                FontSize="20" 
                Margin="78,14,0,0"/>
            
            <!-- Поле для вводя Email -->
            <TextBox x:Name="TextEmail" 
                     MaxLength="100" 
                     Height="40"
                     Width="270" 
                     Margin="0,14,0,0" 
                     Background="#D9D9D9"/>
            
            <!-- Заголовок поля пароль -->
            <TextBlock 
                Text="Пароль:" 
                FontSize="20" 
                Margin="78,14,0,0"/>
            
            <!-- Поле для ввода пароля -->
            <PasswordBox x:Name="TextPassword" 
                         MaxLength="100" 
                         Height="40" 
                         Width="270" 
                         Margin="0,14,0,0"
                         Background="#D9D9D9"/>
            
            <!-- Текст ошибки -->
            <TextBlock x:Name="TextError"
                       Foreground="Red" 
                       FontSize="14" 
                       Width="300" 
                       TextWrapping="Wrap"
                       MaxHeight="60" 
                       Margin="0,8,0,0"
                       TextAlignment="Center"/>
            
            <!-- Кнопка входа -->
            <Button Content="Войти"
                    FontSize="20" 
                    Height="30" 
                    Width="270" 
                    HorizontalAlignment="Center" Click="ButtonLoginClick" 
                    Margin="0, 8,0,0"  
                    Background="#C39797"/>
            
            <!-- Кнопка регистрации -->
            <Button Content="Регистрация"
                    FontSize="20" 
                    Height="30" 
                    Width="127" 
                    Click="ButtonRegisterClick" 
                    Margin="225,40,0,0" 
                    Background="#FAEBD7" 
                    BorderBrush="#FAEBD7"/>
        </StackPanel>
    </Grid>
</Window>
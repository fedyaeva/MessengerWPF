<Window x:Class="MessengerWPF.RegistrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MessengerWPF"
        mc:Ignorable="d"
        Title="AuthWindow" Height="874" Width="402" Background="#FAEBD7">
    <Grid>
        <StackPanel VerticalAlignment="Top" Margin="0,0,0,0" Height="874" Width="402">
            <TextBlock Text="Регистрация" FontSize="32" HorizontalAlignment="Center" Margin="0,94,0,0"/>
            <TextBlock Text="Введите имя:" FontSize="20" Margin="78,16,0,0"/>
            <TextBox x:Name="TextName" MaxLength="100" Height="40" Width="270" Margin="0,16,0,0" Background="#D9D9D9"/>
            <TextBlock Text="Введите пароль:" FontSize="20" Margin="78,16,0,0"/>
            <PasswordBox x:Name="TextPassword1" MaxLength="100" Height="40" Width="270" Margin="0,16,0,0" Background="#D9D9D9"/>
            <TextBlock Text="Подтвердите пароль:" FontSize="20" Margin="78,16,0,0"/>
            <PasswordBox x:Name="TextPassword2" MaxLength="100" Height="40" Width="270" Margin="0,16,0,0" Background="#D9D9D9"/>
            <TextBlock Text="Введите email:" FontSize="20" Margin="78,16,0,0"/>
            <TextBox x:Name="TextEmail" MaxLength="100" Height="40" Width="270" Margin="0,16,0,0" Background="#D9D9D9"/>
            <TextBlock x:Name="TextError" Foreground="Red" FontSize="18" Width="270" Margin="6,8,0,0"/>
            <Button Content="Зарегистрироваться" FontSize="20" Height="30" Width="270" HorizontalAlignment="Center" Click="ButtonReistrClick" Margin="0,8,0,0"  Background="#C39797"/>
        </StackPanel>
    </Grid>
</Window>
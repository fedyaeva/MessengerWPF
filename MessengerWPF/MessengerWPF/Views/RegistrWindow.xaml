<Window x:Class="MessengerWPF.RegistrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MessengerWPF"
        mc:Ignorable="d"
        Title="RegistrWindow" Height="600" Width="800" Background="#FAEBD7">
    <Grid>
        <StackPanel VerticalAlignment="Top" Margin="0,0,0,0" Height="874" Width="402">
            
            <!-- Заголовок Регистрация -->
            <TextBlock 
                Text="Регистрация" 
                FontSize="32" 
                HorizontalAlignment="Center" 
                Margin="0,20,0,0"/>
            
            <!-- Заголовок поля для имени -->
            <TextBlock Text="Введите имя:"
                       FontSize="20" 
                       Margin="78,12,0,0"/>
            
            <!-- Поле для имени -->
            <TextBox x:Name="TextName" 
                     MaxLength="100" 
                     Height="40" 
                     Width="270" 
                     Margin="0,12,0,0" 
                     Background="#D9D9D9"/>
            
            <!-- Заголовок поля пароля -->
            <TextBlock Text="Введите пароль:" 
                       FontSize="20" 
                       Margin="78,12,0,0"/>
            
            <!-- Поле ввода пароля -->
            <PasswordBox x:Name="TextPassword1" 
                         MaxLength="100" 
                         Height="40" 
                         Width="270" 
                         Margin="0,12,0,0" 
                         Background="#D9D9D9"/>
            
            <!-- Заголовок поля подтверждения пароля -->
            <TextBlock Text="Подтвердите пароль:" 
                       FontSize="20" 
                       Margin="78,12,0,0"/>
            
            <!-- Поле подтверждения пароля-->
            <PasswordBox x:Name="TextPassword2" 
                         MaxLength="100" 
                         Height="40" 
                         Width="270" 
                         Margin="0,12,0,0" 
                         Background="#D9D9D9"/>
            
            <!-- Заголовок поля Email -->
            <TextBlock Text="Введите email:" 
                       FontSize="20" 
                       Margin="78,12,0,0"/>
            
            <!-- Поле Email -->
            <TextBox x:Name="TextEmail" 
                     MaxLength="100" 
                     Height="40" 
                     Width="270" 
                     Margin="0,12,0,0" 
                     Background="#D9D9D9"/>
            
            <!-- Текст ошибки -->
            <TextBlock x:Name="TextError"
                       Foreground="Red" 
                       FontSize="10" 
                       Width="300" 
                       TextWrapping="Wrap"
                       MaxHeight="60" 
                       Margin="0,8,0,0"
                       TextAlignment="Center"/>
            
            <!-- Кнопка Зарегистрироваться -->
            <Button Content="Зарегистрироваться" 
                    FontSize="20" 
                    Height="30" 
                    Width="270" 
                    HorizontalAlignment="Center" 
                    Click="ButtonReistrClick" 
                    Margin="0,8,0,0"  
                    Background="#C39797"/>
        </StackPanel>
    </Grid>
</Window>
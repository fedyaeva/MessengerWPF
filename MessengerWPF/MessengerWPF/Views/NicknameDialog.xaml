<Window x:Class="ChatApp.NicknameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите ник" Width="300" Height="150" WindowStartupLocation="CenterOwner">
    <StackPanel Margin="20">
        <TextBlock Text="Введите ваш никнейм:" Margin="0,0,0,10"/>
        <TextBox x:Name="NicknameBox" Margin="0,0,0,10"/>
        <Button Content="OK" Click="Ok_Click" HorizontalAlignment="Right" Width="80"/>
    </StackPanel>
</Window>
